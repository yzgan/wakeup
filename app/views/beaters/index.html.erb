<p id="notice"><%= notice %></p>

<h1>Beaters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beaters.each do |beater| %>
      <tr>
        <td><%= beater.name %></td>
        <td><%= beater.provider %></td>
        <td><%= beater.url %></td>
        <td><%= beater.status %></td>
        <td><%= link_to 'Show', beater %></td>
        <td><%= link_to 'Edit', edit_beater_path(beater) %></td>
        <td><%= link_to 'Destroy', beater, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beater', new_beater_path %>
