.toast#notification{"aria-atomic": "true", "aria-live": "assertive", role: "alert", style: "position: absolute; top: 10px; right: 500px;"}
  .toast-header
    %strong.mr-auto Notification
    %small
    %button.ml-2.mb-1.close{"aria-label" => "Close", "data-dismiss" => "toast", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
  .toast-body
    = notice
    = alert

:javascript
  var notification = "#{notice}" || "#{alert}";
  if(notification) {
    $('#notification').css("right", "10px")
    $('#notification').toast({ delay: 5000 })
    $('#notification').toast('show')
  }
